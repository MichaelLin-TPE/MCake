<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.youth.banner.Banner
        android:id="@+id/detail_item_banner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:banner_indicator_normal_width="10dp"
        app:banner_indicator_selected_width="12dp"
        app:banner_indicator_normal_color="@color/grey"
        app:banner_indicator_selected_color="@color/white"
        app:banner_radius="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_banner_height"/>

</androidx.constraintlayout.widget.ConstraintLayout>