<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/sex_background_shape"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton
        android:id="@+id/select_radio_man"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:buttonTint="@color/app_main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/select_radio_girl"
        app:layout_constraintTop_toBottomOf="@id/select_radio_man"
        app:layout_constraintLeft_toLeftOf="@id/select_radio_man"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:buttonTint="@color/app_main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/select_text_man"
        android:text="@string/man"
        android:textSize="@dimen/small_text_size_16sp"
        android:textColor="@color/text_default_color"
        app:layout_constraintTop_toTopOf="@id/select_radio_man"
        app:layout_constraintBottom_toBottomOf="@id/select_radio_man"
        app:layout_constraintLeft_toRightOf="@id/select_radio_man"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/select_text_girl"
        android:text="@string/girl"
        android:textSize="@dimen/small_text_size_16sp"
        android:textColor="@color/text_default_color"
        app:layout_constraintTop_toTopOf="@id/select_radio_girl"
        app:layout_constraintBottom_toBottomOf="@id/select_radio_girl"
        app:layout_constraintLeft_toRightOf="@id/select_radio_girl"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
